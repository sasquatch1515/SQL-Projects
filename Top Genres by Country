SELECT E.country,
	COUNT(A.customer_id) AS customer_count, 
    SUM(A.amount) AS total_amount_paid,
	(SELECT M.name
FROM category M
INNER JOIN film_category N ON M.category_id = N.category_id
INNER JOIN inventory O ON N.film_id = O.film_id
INNER JOIN rental P ON O.inventory_id = P.inventory_id
INNER JOIN payment Q ON P.rental_id = Q.rental_id
INNER JOIN customer R ON Q.customer_id = R.customer_id
INNER JOIN address S ON R.address_id = S.address_id
INNER JOIN city T ON S.city_id = T.city_id
INNER JOIN country U ON T.country_id = U.country_id
WHERE U.country = E.country
GROUP BY M.name
ORDER BY COUNT(*) DESC
LIMIT 1) AS top_genre
FROM payment A
INNER JOIN customer B ON A.customer_id = B.customer_id
INNER JOIN address C ON B.address_id = C.address_id
INNER JOIN city D ON C.city_id = D.city_id
INNER JOIN country E ON D.country_id = E.country_id
GROUP BY E.country
ORDER BY total_amount_paid DESC
LIMIT 10
